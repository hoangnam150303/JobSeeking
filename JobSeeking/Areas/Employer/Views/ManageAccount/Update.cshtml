@using JobSeeking.Models
@model ApplicationUser

<form asp-action="Update" method="post">
    <input hidden asp-for="@Model.Id" />
    <input hidden asp-for="@Model.Email" />
    <input hidden asp-for="@Model.isValid" />
            <div class="row">
                <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="@Model.UserName" class="form-control" placeholder="Please choose your username."  />
                <label asp-for="@Model.UserName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Name" class="form-control" placeholder="Please write your full name." />
                <label asp-for="@Model.Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Address" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="@Model.Address" class="form-label"></label>
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.City" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="@Model.City" class="form-label"></label>
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
</form>



